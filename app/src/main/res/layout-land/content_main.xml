<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darth"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:gravity="center"
        android:layout_weight="1.08">

        <GridLayout
            android:layout_width="416dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="4"
                android:background="@drawable/buttonpulsestart"
                android:text="@string/ButtonStart" />

            <Button
                android:id="@+id/btnrestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_row="4"
                android:background="@drawable/buttonpulserestart"
                android:text="@string/ButtonReset" />

            <Button
                android:id="@+id/btnred"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="2"
                android:background="@drawable/buttonpulsered"
                />

            <Button
                android:id="@+id/btngreen"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@drawable/buttonpulsegreen"
                />

            <Button
                android:id="@+id/btnblue"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_row="3"
                android:background="@drawable/buttonpulseblue"
                />

            <Button
                android:id="@+id/btnyellow"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@drawable/buttonpulseyellow"
                />

        </GridLayout>

    </LinearLayout>

</LinearLayout>